  "name": "supermarket-microservice",
  "description": "microservice in the context of supermarkets",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf build",
    "tsc": "tsc",
    "build": "npm run clean && tsc",
    "test": "npm run clean && jest",
    "coverage": "npm test -- --coverage",
    "watch": "npm test -- --watch",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint-fix": "npm run lint -- --fix",
    "prestart": "npm run build",
    "start": "node -r dotenv/config build/index.js",
    "start-dev": "nodemon",
    "depcheck": "depcheck --ignores dotenv,ts-node",
    "swagger-doc": "swagger-jsdoc -d ./swagger/swaggerDef.js --output swagger-doc.yml"
  },
  "version": "0.0.1",
  "dependencies": {
    "axios": "^0.21.1",
    "cors": "2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.9.4",
    "express-request-id": "^1.4.1",
    "joi": "^17.2.1",
    "mongodb": "^3.6.6",
    "mongoose": "^5.12.5",
    "rimraf": "^3.0.2",
    "swagger-ui-express": "^4.1.4",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/cors": "2.8.8",
    "@types/express": "^4.17.7",
    "@types/express-request-id": "^1.4.1",
    "@types/faker": "^5.1.0",
    "@types/joi": "^14.3.4",
    "@types/mongodb": "^3.6.12",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.0.0",
    "depcheck": "^1.2.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "faker": "^5.1.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "prettier": "./prettierrc"
